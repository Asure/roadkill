ECHO OFF
ECHO +++
ECHO +++ LRK2
ECHO +++

REM SET UP SO WE CAN USE APPEND MODE OF LOAD2
IF EXIST IMGTBL.ASM GOTO LRK2E1
COPY IMGBLANK.DUM IMGTBL.ASM
:LRK2E1
IF EXIST IMGPAL.ASM GOTO LRK2E2
COPY IMGPAL.DUM IMGPAL.ASM
:LRK2E2

REM DO THE LOAD2 THING
LOAD2 LRK2 /A /TC
IF ERRORLEVEL 1 GOTO LRK2FAIL

REM PIECE THINGS TOGETHER
COPY IMGTBLM1.DUM+IMGTBLM1.TBL IMGTBLM1.ASM
COPY IMGTBLM2.DUM+IMGTBLM2.TBL IMGTBLM2.ASM
COPY IMGTBLF1.DUM+IMGTBLF1.TBL IMGTBLF1.ASM
DEL IMGTBLM1.TBL
DEL IMGTBLM2.TBL
DEL IMGTBLF1.TBL
GOTO LRK2X

:LRK2FAIL
ECHO ***
ECHO *** LRK2 ERROR
ECHO ***
PAUSE

:LRK2X
